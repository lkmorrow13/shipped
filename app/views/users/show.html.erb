<div class="container">
	<div class="row">
		<div class="col-3">
			<h1><%= @user.first_name + ' ' + @user.last_name %></h1>
			<h3><%= @user.email %></h3>
		</div>
		<div class="col-3 offset-2">
			<h3><%= @user.bio %></h3>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<% @user.jobs.each do |job| %>
			<div class="col-3">
				<%= job.name %>
				<%= job.description %>
				<%= job.origin %>
				<%= job.containers_needed %>
				<%= job.destination %>
				<%= job.cost %>
			</div>
		<% end %>
	</div>
</div>
<div class="container">
	<div class="boats row">
		<%= render @user.boats.reverse %>
		<% @user.boats.each do |boat| %>
		<% end %>
	</div>
</div>